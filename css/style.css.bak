*{margin:0;padding:0;text-decoration:none;list-style:none;}
body{background:url(../images/body.jpg) no-repeat;background-color:#282828;z-index:1;}
#container{}


#top{height:40px;color:#e5e5e5;background:url(../images/toptb.gif);}


#nav_bg{background:url(../images/nv_bg.jpg);height:80px;width:100%;z-index:9;position:relative;}
#nav{width:1000px;height:81px;margin:0 auto;}
.nav_logo{width:240px;height:80px;float:left;}
.nav_logo h2{}
.nav_logo h2 img{margin:10px;}

.nav_list{width:670px;height:80px;float:left;}
.nav_list ul {font:12px/1.5 'Microsoft Yahei',arial,helvetica,sans-serif;}
.nav_list ul li{float:right;width:58px;height:75px;cursor:pointer;text-align:center;padding:5px 10px 0;}
.nav_list ul li a{color:#fff;font-size:16px;width:37px;height:30px;line-height:30px;}
.nav_list ul li span{font-size:12px;width:37px;height:20px;line-height:20px;}
.nav_list ul .on{color:#56c3ff;background:rgba(0,0,0,0.4);}
.nav_list ul li.on a{color:#56c3ff !important;}//使用class改变a标签的颜色

.nav_search{width:90px;height:80px;position:relative;}
.nav_search a{width:48px;height:48px;display:block;line-height:80px;padding:16px 21px;float:left;}
.nav_search .search_box{width:237px;height:35px;background-color:#fff;float:right;padding:5px 7px 0;}
.nav_search .search_box #search_box_input{float:left;width:200px;height:28;line-height:28px;border:1px solid #e5e5e5;outline:none;}
.nav_search .search_box .search_img{float:left;margin-left:5px;cursor:pointer;}


#main{width:1000px;height:400px;margin:1px auto 0;position:relative;}
#main #img_box{width;960px;height:400px;overflow:hidden;position:absolute;z-index:5;margin:0 20px;box-shadow:2px 2px 2px #282828;border-radius:5px;}
#main #img_box ul {}
#main #img_box ul li{float:left;}

#main #button{width:960px;height:15px;z-index:9;position:absolute;bottom:10px;}
#main #button ul{width:125px;height:15px;margin:0 auto;}
#main #button ul li{width:15px;height:15px;line-height:15px;text-align:center;border-radius:15px;background-color:#282828;margin:0 5px;float:left;color:#282828;}
#main #button ul .hover{background-color:#d9635f;color:#d9635f;}

#box{width:1000px;height:252px;z-index:9;position:relative;margin:2px auto 0;}
#box .box_main{width:960px;height:250px;position:absolute;margin:0 20px;border-radius:5px;}
#box .box_main .box_left{width:310px;height:250px;background-color:#d9635f;float:left;margin:0 15px 0 0 ;border-radius:5px;}

#box .box_main .box_middle{width:310px;height:250px;background-color:#d9635f;float:left;border-radius:5px;}

#box .box_main .box_right{width:310px;height:250px;background-color:#d9635f;float:right;border-radius:5px;}

#bottom{}


