  <style tyle="text/css">
		*{margin:0;padding:0;list-style:none;text-decoration:none;}
		a{color:#000;}
		body{background:url(images/body.jpg);}
		#con{position:relative;}
		#con ul {width:502px;font-size:16px;font-weight:bold;height:40px;}
		#con ul li{float:left;width:80px;height:40px;line-height:40px;background-color:#fff2d2;text-align:center;border-left:1px solid;border-right:1px solid;border-radius:5px;}
		#con ul .on{background-color:#d9635f;}
  </style>
  <script type="text/javascript" src="js/jquery-1.8.3.min.js"></script>
  <script type="text/javascript">
	$(function(){
		$("#con ul li").click(function(){
			$(this).addClass("on").siblings().removeClass("on");
			$(".on").stop().animate({width:"100px"},300).siblings().stop().animate({width:"80px"},300);
		})	

		
		
	})
  </script>
